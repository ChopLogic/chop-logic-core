{
	"name": "chop-logic-core",
	"version": "1.3.1",
	"description": "Core classes, methods and functions for calculating logical formulas and constructing proofs within the Chop Logic project.",
	"main": "lib/index.cjs",
	"module": "lib/index.mjs",
	"types": "lib/index.d.ts",
	"files": [
		"lib"
	],
	"scripts": {
		"build": "tsup src/index.ts --format esm,cjs --dts --out-dir lib",
		"prepare": "npm run build && husky",
		"clean": "rm -rf lib",
		"prepublishOnly": "npm run clean && npm run build",
		"check": "biome check .  --max-diagnostics none",
		"check:ci": "npx @biomejs/biome check --write --files-ignore-unknown=true --no-errors-on-unmatched",
		"format": "biome format . --write",
		"fix": "biome check . --write",
		"test": "jest --watch",
		"test:ci": "jest --passWithNoTests",
		"coverage": "jest --coverage --collectCoverageFrom='src/**/*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}'",
		"types": "tsc --pretty --noEmit",
		"release:version": "node scripts/release-version.js"
	},
	"lint-staged": {
		"*.ts": [
			"npm run types"
		],
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"npm run check:ci"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ChopLogic/chop-logic-core.git"
	},
	"keywords": [
		"chop-logic",
		"logic",
		"propositional-logic",
		"proof-system",
		"typescript",
		"formal-logic",
		"hilbert",
		"natural-deduction"
	],
	"author": "Dmitrii Suroviagin",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/ChopLogic/chop-logic-core/issues"
	},
	"homepage": "https://github.com/ChopLogic/chop-logic-core#readme",
	"devDependencies": {
		"@biomejs/biome": "^2.1.2",
		"@commitlint/cli": "^19.7.1",
		"@commitlint/config-conventional": "^19.7.1",
		"@jest/globals": "^30.0.5",
		"@types/jest": "^29.5.14",
		"babel-jest": "^29.7.0",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"lint-staged": "^15.4.3",
		"ts-jest": "^29.4.1",
		"tsup": "^8.4.0",
		"typescript": "^5.7.3"
	}
}
